{
  "compilerOptions": {
    "lib": ["es2017"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "baseUrl": "./",
    "paths": {
      "@module/*": ["./src/module/*"],
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    ".vscode/**/*"
  ]
}
